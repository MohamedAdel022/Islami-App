<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"

    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chapter_index_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/quran_chapter_image"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent=".18"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/chapter_name_english"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chapter_index_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:text="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/chapter_index_bg"
        app:layout_constraintBottom_toBottomOf="@id/chapter_index_bg"
        app:layout_constraintStart_toStartOf="@id/chapter_index_bg"
        app:layout_constraintEnd_toEndOf="@id/chapter_index_bg"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chapter_name_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Al-Fatiha"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintBottom_toTopOf="@id/chapter_length_text_view"
        app:layout_constraintStart_toEndOf="@id/chapter_index_bg"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chapter_length_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        tools:text="7 Verses"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toBottomOf="@id/chapter_name_english"
        app:layout_constraintStart_toEndOf="@id/chapter_index_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chapter_name_arabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="الفاتحه"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/chapter_index_text_view"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".68"
        />


</androidx.constraintlayout.widget.ConstraintLayout>